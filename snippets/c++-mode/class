#name: Class definition
#key: class
# --
/**
  * ${2:description}
  **/
class ${1:name}
{
public:
    //! Constructor
    $1();
    //! Destructor
    ~$1();
    //! Move-Constructor (default)
    $1( $1 && ) = default;
private:
    //! Copy-Constructor (delete)
    $1( const $1 & ) = delete;
    //! Assignment-Operator (delete)
    $1 &operator=( const $1 & ) = delete;
};